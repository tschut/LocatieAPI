<web-app>
	<display-name>Lokatie API</display-name>

	<listener>
		<listener-class>
			org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
		</listener-class>
	</listener>

	<servlet>
		<servlet-name>lokatieapi</servlet-name>
		<servlet-class>
			org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher
		</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>nl.loxia.lokatieapi.LokatieAPIApplication</param-value>
		</init-param>

	</servlet>

	<servlet-mapping>
		<servlet-name>lokatieapi</servlet-name>
		<url-pattern>/lokatieapi*</url-pattern>
	</servlet-mapping>

